<Window x:Class="WPF_Responding_to_Changes.Responding_to_Changes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Responding_to_Changes"
        mc:Ignorable="d"
        Title="Responding_to_Changes" Height="150" Width="300">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
            <Button Name="btnAddUser" Click="BtnAddUser_Click">Add User</Button>
            <Button Name="btnChangeUser" Click="BtnChangeUser_Click" Margin="0,5">Change User</Button>
            <Button Name="btnDeleteUser" Click="BtnDeleteUser_Click">Delete User</Button>
        </StackPanel>
        <ListBox Name="lbUser" DisplayMemberPath="Name"></ListBox>
    </DockPanel>
</Window>
