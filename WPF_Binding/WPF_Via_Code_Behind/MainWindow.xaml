<Window x:Class="WPF_Via_Code_Behind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Via_Code_Behind"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="280" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBox Name="txtValue"/>
        <WrapPanel Margin="0,10">
            <TextBlock Text="Value: " FontWeight="Bold"/>
            <TextBlock Name="tblvalue" TextWrapping="Wrap"/>
        </WrapPanel>
    </StackPanel>
</Window>
